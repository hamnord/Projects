<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.TextFieldListCell?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.control.cell.TextFieldTableCell?>
<?import javafx.scene.image.ImageView?>

<VBox id="createPlayer"
      styleClass="createPlayer"
      stylesheets="@/Css/createPlayer.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.DeluxeRps.Controllers.CreatePlayer">

  <VBox id="header">
    <Label id="header" text=" Create your player"/>
  </VBox>

  <VBox id="profilePictureAlignment">
    <ImageView id="profilePicture" fitWidth="125" preserveRatio="true" onMouseClicked="#addProfilePicture" />

    <Button id="profileButton"
            text="Add profile picture"
            focusTraversable="false"
            onMouseClicked="#addProfilePicture"/>
  </VBox>

  <VBox id="inputAlignment">
    <TextField fx:id="newUserName"
               promptText="Enter UserName"
            focusTraversable="false"/>
  </VBox>

  <VBox id="inputAlignment">
    <PasswordField fx:id="newPassword"
                   promptText="Password"
                   focusTraversable="false"/>
  </VBox>
  <VBox id="inputAlignment">
    <PasswordField fx:id="repeatPassword"
                   promptText="Repeat Password"
                   focusTraversable="false"/>
  </VBox>
  <VBox id="inputAlignment">
    <TextField fx:id="newEmail"
               promptText="Enter Email"
            focusTraversable="false"/>
  </VBox>

  <VBox id="inputAlignment">
    <Button fx:id="confirmButton"
               text="Confirm"
               focusTraversable="false" onMouseClicked="#confirmButtonClicked"/>
  </VBox>

  <VBox id="inputAlignment">
    <Button id="Back Button"
            text="Back Button"
            focusTraversable="false" onMouseClicked="#backButtonClicked"/>
  </VBox>



</VBox>
