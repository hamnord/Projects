<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.image.ImageView?>

<VBox id="login"
      styleClass="login"
      stylesheets="@/Css/Login.css"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.DeluxeRps.Controllers.Login">

  <Label id="header" text="Login"/>

  <VBox id="inputAlignment">
    <TextField fx:id="userNameInput"
               promptText="Enter UserName"
               focusTraversable="false"/>
  </VBox>

  <VBox id="inputAlignment">
    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   focusTraversable="false"/>
  </VBox>

  <VBox id="spacing">
  </VBox>

  <VBox id="buttonAlignment">
  <ImageView id="loginButton" fitWidth="200" preserveRatio="true" onMouseClicked="#loginButtonClicked"/>
  <ImageView id="backButton" fitWidth="150" preserveRatio="true" onMouseClicked="#backButtonClicked"/>
    <ImageView id="exitButton" fitWidth="150" preserveRatio="true" onMouseClicked="#closeButtonClicked"/>
  </VBox>

</VBox>
