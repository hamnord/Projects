<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>

<VBox
    id="mainMenu"
    styleClass="mainMenu"
    stylesheets="@/Css/mainMenu.css"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.example.DeluxeRps.Controllers.MainMenu" >

  <VBox id="imageAlignment">
    <ImageView id="RpsLogo" fitWidth="300" preserveRatio="true"/>
  </VBox>

  <VBox id="buttonAlignment">
    <ImageView id="loginButton" fitWidth="200" preserveRatio="true" onMouseClicked="#loginButtonClicked"/>
    <ImageView id="createUserButton" fitWidth="200" preserveRatio="true" onMouseClicked="#createPlayerButtonClicked"/>
    <ImageView id="rulesButton" fitWidth="200" preserveRatio="true" onMouseClicked="#instructionsButtonClicked"/>
    <ImageView id="exitButton" fitWidth="150" preserveRatio="true" onMouseClicked="#exitButtonClicked"/>
  </VBox>

</VBox>
